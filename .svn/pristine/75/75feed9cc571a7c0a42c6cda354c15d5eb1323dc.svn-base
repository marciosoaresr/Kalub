</head>

<body style="overflow: visible;">
<div style="position: fixed; top: 0px; left: 0px; width: 0; height: 0;" id="scrollzipPoint"></div>
<div id="preloader" style="display: none;">
    <div id="status" style="display: none;">&nbsp;</div>
</div>

    <div id="sb-site">
        <div class="boxed">
            <header id="header-full-top" class="hidden-xs header-full">
                <div class="container">
                    <div class="header-full-title">
                        <h1 class="animated fadeInRight">
                            <a href="#"><img src="../../Images/kalub-logo-home.png" width="220" /></a>
                        </h1>

                    </div>
                    <nav class="top-nav">
                        <ul class="top-nav-social hidden-sm">
                            <li><a href="#" class="animated fadeIn animation-delay-7 twitter"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#" class="animated fadeIn animation-delay-8 facebook"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="#" class="animated fadeIn animation-delay-7 linkedin"><i class="fa fa-linkedin"></i></a></li>
                        </ul>
                        <div class="dropdown animated fadeInDown animation-delay-11">
                            <a href="" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-user"></i> Login</a>
                            <div class="dropdown-menu dropdown-menu-right dropdown-login-box animated flipCenter">
                                @using (Html.BeginForm("Autenticar", "Login", FormMethod.Post))
                                {
                                    <h4>Login</h4>
                                    <div class="form-group">
                                        <div class="input-group login-input">
                                            <span class="input-group-addon"><i class="fa fa-user"></i></span>
                                            <input type="text" class="form-control" placeholder="email" id="validate_email" name="email" required>
                                        </div>
                                        <br>
                                        <div class="input-group login-input">
                                            <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                                            <input type="password" class="form-control" placeholder="senha" id="validate_password" name="senha" required>
                                        </div>

                                        <button type="submit" class="btn btn-ar btn-primary pull-right">Login</button>
                                        <div class="clearfix"></div>
                                    </div>
                                }
                            </div>
                        </div> <!-- dropdown -->

                    </nav>
                </div>
            </header>
            <nav class="navbar-default navbar-header-full navbar-dark yamm navbar-static-top" role="navigation" id="header" height="65">
                <div class="container">
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            <li>
                                <a href="#" class="animated fadeIn animation-delay-7">Home</a>
                            </li>
                            <li>
                                <a href="#sobre" class="animated fadeIn animation-delay-7">Sobre</a>
                            </li>
                            <li>
                                <a href="#seguranca" class="animated fadeIn animation-delay-7">Segurança</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        <section class="carousel-section">
            <div id="carousel-example-generic" class="carousel carousel-razon slide" data-ride="carousel" data-interval="6000">
                <ol class="carousel-indicators">
                    <li data-target="#carousel-example-generic" data-slide-to="1" class=""></li>
                    <li data-target="#carousel-example-generic" data-slide-to="2" class="active"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="item">
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-6 col-md-7 col-sm-9">
                                    <div class="carousel-caption">
                                        <div class="carousel-text" style="padding-left: 50px;">
                                            <h1 class="animated fadeInDownBig animation-delay-7 carousel-title">Exclusivo para micros e pequenas empresas comerciais</h1>
                                            <h2 class="animated fadeInDownBig animation-delay-5  crousel-subtitle">Optantes pelo Simples Nacional</h2>
                                            <ul class="list-unstyled carousel-list">
