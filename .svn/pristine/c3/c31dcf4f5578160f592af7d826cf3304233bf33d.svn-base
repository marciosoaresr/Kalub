@using System.Globalization
@using ProfitManager.Fabrica.Enum
<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>KALUB</title>
    <link rel="shortcut icon" href="../../Images/favicon.ico">
    <!-- start: Css -->
    <link rel="stylesheet" type="text/css" href="../../css/bootstrap.min.css">
    <!-- plugins -->
    <link rel="stylesheet" type="text/css" href="../../css/plugins/font-awesome.min.css" />
    <link rel="stylesheet" type="text/css" href="../../css/plugins/simple-line-icons.css" />
    <link rel="stylesheet" type="text/css" href="../../css/plugins/animate.min.css" />
    <link rel="stylesheet" type="text/css" href="../../css/plugins/fullcalendar.min.css" />
    <link href="../../css/style.css" rel="stylesheet">
    <!-- end: Css -->
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->


@{

    bool exibealert = false;
    if (ViewBag.status == EnumEmpresaStatus.Gratis)
    {
        exibealert = true;
    }
}

</head>
<body id="mimin" class="dashboard" style="background-color: #2c4970;">
<div class="">
@if (exibealert)
{
    <div class="col-md-12 nav-wrapper " style="text-align: center; width: 100%; background-color: #fff;">
        <div class="navbar-header" style="width: 100%;padding-top: 5px; padding-bottom: 5px;">
            <table width="100%" style="text-align: center;">
                <tr>
                    <td >
                        <a href="/Contratar" class="btn btn-info-shop btn-primary btn-round"><span style="font-size: 14.8px; color: #fff;"> Assine hoje o KALUB </span></a>
                    </td>
                </tr>
            </table>
        </div>
    </div>
}
    <!-- start: content -->
    <div id="content">


        <div class="col-md-12" style="padding: 0px;">

            <section id="" style="height: 100%">

                <section id="contentrigth" style="width: 100%; position: absolute; top: 0px;">
                    @RenderBody()
                </section>



            </section>
        </div>
    </div>
    <!-- end: content -->


</div>
    <!-- start: Mobile -->
<div id="mimin-mobile" class="reverse">
    <div class="mimin-mobile-menu-list">
        <div class="col-md-12 sub-mimin-mobile-menu-list ">
            <nav class="navbar navbar-default header navbar-fixed-top" style="height: 30px">
                <div class="col-md-12 nav-wrapper " style="text-align: center; width: 100%;padding-top: 8px;">
                    <span><img src="../../Images/kalub-logo-home.png" width="120" /></span>
                </div>
            </nav>
            <ul style="padding-top: 50px;" class="nav nav-list animated fadeInLeft">
                <li class="active ripple">
                    <a href="../PrincipalUser">
                        <span class="fa fa-home"></span>Home
                    </a>
                </li> 
                <li class="ripple">
                    <a class="tree-toggle nav-header">
                        <span class="fa-file-text fa"></span>Relatórios
                        <span class="fa-angle-right fa right-arrow text-right"></span>
                    </a>
                    <ul class="nav nav-list tree" >
                        <li style="padding-bottom: 2px;"><a href="../ExtratoConta" class="btn btn-round btn-info" style="font-size: 17px; text-align: left;">Extrato de Conta</a></li>
                        <li style="padding-bottom: 2px;"><a href="../GrupoDRE/GerarDRE" class="btn btn-round btn-info" style="font-size: 17px;text-align: left">Demonstração do Resultado(DRE)</a></li>
                        <li style="padding-bottom: 2px;"><a href="../DemonstracaoFluxoCaixa" class="btn btn-round btn-info" style="font-size: 17px;text-align: left">Demonstração do Fluxo de Caixa(DFC)</a></li>
                        <li style="padding-bottom: 2px;"><a href="../BalancoPatrimonial" class="btn btn-round btn-info" style="font-size: 17px;text-align: left">Balanço Patrimonial</a></li>
                        <li style="padding-bottom: 2px;"><a href="../Diagnostico/GerarDiagnostico" class="btn btn-round btn-info" style="font-size: 17px;text-align: left">Diagnóstico de Resultados</a></li>
                    </ul>
                </li>
                <li class="ripple">
                    <a class="tree-toggle nav-header">
                        <span class="fa fa-cogs"></span>Configurações
                        <span class="fa-angle-right fa right-arrow text-right"></span>
                    </a>
                    <ul class="nav nav-list tree" style="font-size: 17px;">
                        <li style="padding-bottom: 2px;"><a href="../Empresa/CadastrarEditarEmpresa" class="btn btn-round btn-info" style="font-size: 17px; text-align: left;">Dados da Empresa</a></li>
                    </ul>
                </li>
                <li class="ripple">
                    <a class="tree-toggle nav-header">
                        <a href="/Login/LogoutMobile"><span class="fa fa-power-off"></span>Sair</a>
                    </a>
                </li>

            </ul>
        </div>
    </div>
</div>
    <button id="mimin-mobile-menu-opener" class="animated rubberBand btn btn-circle btn-danger">
        <span class="fa fa-bars"></span>
    </button>
    <!-- end: Mobile -->

    @RenderSection("scripts", required: false)

    <!-- start: Javascript -->
    <script src="../../Scripts/jquery.min.js"></script>
    <script src="../../Scripts/jquery.ui.min.js"></script>
    <script src="../../Scripts/bootstrap.min.js"></script>


<!-- plugins -->
    <script src="../../Scripts/bootstrap-filestyle.js"></script>
    <script src="../../Scripts/plugins/moment.min.js"></script>
    <script src="../../Scripts/plugins/jquery.nicescroll.js"></script>
    <script src="../../Scripts/plugins/jquery.simply-toast.js"></script>


    <!-- custom -->
    <script src="../../Scripts/main.js"></script>
    <!-- end: Javascript -->
</body>
</html>